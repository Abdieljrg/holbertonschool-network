#!/usr/bin/env bash
# Check if the `ip` command is available
if command -v ip > /dev/null; then
    # Use the `ip` command to list IPv4 addresses
    ip -4 addr show | grep -oP '(?<=inet\s)\d+(\.\d+){3}'
else
    # Fallback to `ifconfig` if `ip` is not available
    if command -v ifconfig > /dev/null; then
        ifconfig | grep -oP '(?<=inet\s)\d+(\.\d+){3}'
    else
        echo "Neither 'ip' nor 'ifconfig' commands are available on this system."
        exit 1
    fi
fi